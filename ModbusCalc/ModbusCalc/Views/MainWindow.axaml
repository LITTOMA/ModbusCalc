<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ModbusCalc.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ModbusCalc.Views"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
        x:Class="ModbusCalc.Views.MainWindow"
        TransparencyLevelHint="AcrylicBlur"
        Background="#99FFFFFF"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterScreen"
        Width="300" Height="450"
        MinWidth="300" MinHeight="450"
        MaxWidth="300" MaxHeight="450"
        CanResize="False"
        Icon="/Assets/avalonia-logo.ico"
        Title="ModbusCalc">

        <Grid RowDefinitions="Auto,*">
                <TextBlock Text="ModbusCalc" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" Margin="8" />
                <views:MainView Grid.Row="1"/>
        </Grid>
</Window>
